--- 
import Layout from ".././components/layout.astro";
import BgImage from "../../images/logo.png";

const posts = await Astro.glob('../blog/posts/*.md');
console.log();
---

<Layout pageTitle="Blog" pageDescription="Aqui se mostraran todos los posts creados.">
    <h1>Post</h1>
    <img src={BgImage.src} alt="" width="150" height="150">
    <ul>
        {//estos parentesis te permiten agregar JS en HTML
            posts.map(post=>{
                return <li><a href={post.url}>{post.frontmatter.title}</a></li>
            })
        }
    </ul>
</Layout>
